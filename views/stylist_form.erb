<h1 class="page-header text-center">Add a New Stylist</h1>

<div class="row move-down">
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/stylists" method="post">
      <div class="form-group form-inline no-wrap">
        <input id="first_name" name="first_name" class="form-control half-width capitalize" placeholder="First Name" required>
        <input id="last_name" name="last_name" class="form-control half-width capitalize" placeholder="Last Name" required>
      </div>
      <button type="submit" class="btn btn-primary stretch">Add Stylist</button>
    </form>
  </div>
</div>

