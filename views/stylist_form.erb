<h1 class="page-header text-center">Add a New Stylist</h1>

<div class="row move-down">
  <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
    <form action="/stylists" method="post">
      <div class="form-group">
        <input id="first_name" name="first_name" class="form-control capitalize" placeholder="First Name" required autofocus>
      </div>
      <div class="form-group">
        <input id="last_name" name="last_name" class="form-control capitalize" placeholder="Last Name" required>
      </div>
      <button type="submit" class="btn btn-primary stretch">Add Stylist</button>
    </form>
  </div>
</div>

<a href="/stylists" class="back-link">< Back</a>
