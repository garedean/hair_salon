<h1 class="page-header text-center">Stylists</h1>

<div class="row move-down">
  <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
    <% if Stylist.all.empty? %>
      <p class="lead text-center">Looks like you're running low on stylists.<a href="/stylists/new" class="btn btn-primary stretch bump-down" role="button">Add one!</a></p>
    <% else %>
      <form action="/stylists">
        <div class="form-group">
          <label target="title">Lookup a Stylist or <a href="/stylists/new">add one</a>:</label>
          <input id="name" name="name" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary stretch">Search</button>
      </form>
    <% end %>
  </div>

  <% unless @stylists.empty? %>
    <div class="col-xs-8 col-xs-offset-2 col-sm-4 col-sm-offset-4">
      <h3>Lookup results:</h3>
      <ul class="lookup-results">
        <% @stylists.each do |stylist| %>
          <li><a href="/stylists/<%= stylist.id %>"><%= stylist.full_name %></a></li>
        <% end %>
      </ul>
    </div>
  <% end %>

</div>

